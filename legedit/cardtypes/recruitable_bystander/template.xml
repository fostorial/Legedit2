<?xml version="1.0" encoding="utf-8"?>
<xml>

<template
 name="recruitable_bystander"
 displayname="Recruitable Bystander"
 deck="bystanders"
 defaultsindeck="false"
 />

<cardsize
 cardwidth="750"
