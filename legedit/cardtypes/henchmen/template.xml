<?xml version="1.0" encoding="utf-8"?>
<xml>

<template
 name="henchmen"
 displayname="Henchman"
 deck="henchmen"
 defaultsindeck="true"
 />

<cardsize
 cardwidth="750"
 cardheight="1050"
 dpi="300"
 />

<bgimage
 name="Image"
 fullsize="false"
 x="0"
 y="0"
 maxwidth="750"
 maxheight="1050"
 allowchange="true"
 zoomable="true"
 />

<image
 name="text_overlay"
 templatefile="true"
 path="back_underlay.png"
 fullsize="true"
 x="0"
 y="0"
 maxwidth="750"
 maxheight="1050"
 allowchange="false"
 zoomable="false"
 />

<styles>

 <style
  name="Base Set">

 <cardname 
 name="Card Name"
 defaultvalue="%DECKNAME%"
 allowchange="false"
 includesubname="true"
 subnameeditable="false"
 highlight="blur"
 highlightcolour="#000000"
 uppercase="true"
 alignment="center"
 x="375"
 y="40"
 colour="#FBD246"
 textsize="48"
 subnametext="Henchman Villain"
 subnamesize="34"
 subnamegap="12"
 blurradius="15"
 bluedouble="false"
 blurexpand="4"
 />

 </style>

 <style
 name="Villains">

<cardname 
 name="Card Name"
 defaultvalue="%DECKNAME%"
 allowchange="true"
 includesubname="true"
 subnameeditable="false"
 highlight="banner"
 highlightcolour="#111111"
 uppercase="true"
 alignment="center"
 x="375"
 y="40"
 colour="#FBD246"
 textsize="48"
 subnametext="Henchman Villain"
 subnamesize="34"
 subnamegap="12"
 blurradius="16"
 bluedouble="false"
 blurexpand="8"
 />

 </style>

</styles>

<icon
 name="Victory"
 defaultvalue="victory"
 allowchange="false"
 optional="true"
 x="662"
 y="696"
