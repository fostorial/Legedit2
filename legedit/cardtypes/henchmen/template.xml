 y="696"
 maxwidth="50"
 maxheight="50"
 drawunderlay="false"
 blurradius="15"
 bluedouble="true"
 blurexpand="0"
 blurcolour="#FFFFFF"
 />

<icon
 name="Attack"
 defaultvalue="attack"
 allowchange="false"
