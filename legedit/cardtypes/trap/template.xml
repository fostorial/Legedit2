<?xml version="1.0" encoding="utf-8"?>
<xml>

<template
 name="trap"
 displayname="Trap"
 deck="villain"
 defaultsindeck="false"
 />

<cardsize
 cardwidth="750"
 cardheight="1050"
 dpi="300"
 />

<bgimage
 name="Image"
 fullsize="false"
 x="0"
 y="0"
 maxwidth="750"
 maxheight="1050"
 allowchange="true"
 zoomable="true"
 />

<image
 name="text_overlay"
 templatefile="true"
 path="back_underlay.png"
 fullsize="true"
 x="0"
 y="0"
 maxwidth="750"
 maxheight="1050"
 allowchange="false"
 zoomable="false"
 />

<styles>

<style
 name="Villains">

<cardname 
 name="Card Name"
 defaultvalue="Card Name"
 allowchange="true"
 includesubname="true"
 subnameeditable="false"
 highlight="banner"
 highlightcolour="#111111"
 uppercase="true"
 alignment="center"
 x="375"
 y="40"
 colour="#FBD246"
 textsize="48"
 subnametext="%DECKNAME%"
 subnameprefix="Trap - "
 subnamesize="34"
 subnamegap="12"
 blurradius="16"
 bluedouble="false"
 blurexpand="8"
 />

 </style>

 <style
  name="Base Set">

 <cardname 
 name="Card Name"
 defaultvalue="Card Name"
 allowchange="false"
 includesubname="true"
 subnameeditable="false"
 highlight="blur"
 highlightcolour="#000000"
 uppercase="true"
 alignment="center"
 x="375"
 y="40"
 colour="#FBD246"
 textsize="48"
 subnametext="%DECKNAME%"
 subnameprefix="Trap - "
 subnamesize="34"
 subnamegap="12"
 blurradius="15"
 bluedouble="false"
 blurexpand="4"
 />

 </style>

</styles>

<icon
 name="Victory"
 defaultvalue="victory"
 allowchange="false"
 optional="true"
 x="662"
 y="696"
 maxwidth="60"
 maxheight="60"
 drawunderlay="false"
 blurradius="1"
 bluedouble="false"
 blurexpand="0"
 blurcolour="#000000"
 />

<text
 name="Victory Value"
 linkedelement="Victory"
 alignment="center"
 allowchange="true"
 defaultvalue="0"
 x="662"
 y="691"
 colour="#FFFFFF"
 fontname="MatrixSmallCapsFixed"
 fontstyle="0"
 textsize="50"
 uppercase="true"
 drawunderlay="true"
 blurradius="2"
 bluedouble="false"
 blurexpand="3"
 blurcolour="#000000"
 />

<textarea
 name="Card Text"
 alignmenthorizontal="left"
 alignmentvertical="top"
 allowchange="true"
 defaultvalue="&lt;k&gt;By End of Turn:&lt;r&gt; &lt;g&gt; &lt;k&gt;Or Suffer:&lt;r&gt;"
 colour="#000000"
 textsize="34"
 rectxarray="110,710,710,560,445,345,205"
 rectyarray="785,785,1030,1030,1030,1000,909"
 debug="false"
 />

<property
 name="Number in Deck"
 property="numberindeck"
 defaultvalue="2"
 />

</xml>

